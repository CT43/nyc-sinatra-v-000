<h1>Add a New Figure</h1>

<form action="/figures" method="POST">
  <label> Name </label>
  <input type="text" name="figure[name]"> </br>

  <label> Titles </label>
  <% Title.all.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" value="<%= title.id %"> <br>
  <% end %>

  <h2>Create New Title:</h2>
  <input type="text" name="title[name]"> </br>

  <label> Landmarks </label>
  <% Landmark.all.each do |landmark| %>
    <input id="<%= landmark.name %>" type="checkbox" name="landmark[name]" value="<%= landmark.id %>">
  <% end %>

  <input type="submit" value="Create">
</form>
